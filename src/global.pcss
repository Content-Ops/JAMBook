@tailwind base;
@tailwind components;
@tailwind utilities;

h1,
h2,
h3,
h4,
h5,
h6 {
  @apply font-bold;
}

h1 {
  @apply text-5xl mb-6;
}

h2 {
  @apply text-3xl mb-4;
}

h3,
h4,
h5,
h6 {
  @apply text-xl mb-2;
}

p {
  @apply mb-4;
}

.card {
  @apply relative bg-white border rounded shadow-xl w-full p-3 h-full;
}
